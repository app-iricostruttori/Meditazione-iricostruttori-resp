    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view_meditazione"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_view_meditazione_description"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sacra_sindone_ricostruttori"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />
    <!-- Greencore_FF Start Consigli di GeminAi per round imageview e textview -->


    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_btn"
        style="@style/Widget.App.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DescButtonStart"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_meditazione" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stop_btn"
        style="@style/Widget.App.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DescButtonStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeLeft" />

    <!-- android:hint="@string/DescSumOperation" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sumMinutes_btn"
        style="@style/Widget.App.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:contentDescription="@string/DescSumOperation"
        app:icon="@drawable/ic_add"  app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/timeLeft"
        app:layout_constraintEnd_toStartOf="@+id/timeLeft" />

    <!-- android:hint="@string/DescSubOperation" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/subMinutes_btn"
        style="@style/Widget.App.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:contentDescription="@string/DescSubOperation"
        app:icon="@drawable/ic_remove"  app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/timeLeft"
        app:layout_constraintStart_toEndOf="@+id/timeLeft" />

    <!-- android:contentDescription="@string/DescTimeLeft" -->
    <TextView
        android:id="@+id/timeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/DescTimeLeft"
        android:paddingBottom="5dp"
        android:textSize="36sp"
        android:visibility="visible"
        android:fontFamily="@font/quicksandlight"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_btn" />

    <EditText
        android:id="@+id/editTimeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/DescEditTimeInput"
        android:fontFamily="@font/quicksandlight"

        android:inputType="number"
        android:maxLength="3"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stop_btn"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
    <!--
    <NumberPicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stop_btn" />
     -->



    <!--
    android:layout_height="wrap_content"
    android:layout_width="90dip"
    android:layout_marginStart="20dp"
    android:layout_marginTop="30dp"
    android:max="29"

    -->
    <SeekBar
        android:id="@+id/seekBarMeditazione"

        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="25dp"

        android:thumb="@drawable/ic_fas_volume_up"
        app:layout_constraintStart_toEndOf="@+id/start_btn"
        app:layout_constraintTop_toBottomOf="@+id/image_view_meditazione" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>