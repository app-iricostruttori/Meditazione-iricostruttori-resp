<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <!--
    tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
    -->

    <Button
        android:id="@+id/sumMinutes_btn_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/calmBlue"
        android:fontFamily="@font/quicksandbold"
        android:padding="10dp"

        android:paddingLeft="3dp"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/writeTimeDefault"
        app:layout_constraintTop_toBottomOf="@+id/readTimeDefault"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="10" />

    <Button
        android:id="@+id/subMinutes_btn_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/calmBlue"
        android:fontFamily="@font/quicksandbold"

        android:padding="10dp"
        android:paddingLeft="3dp"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/writeTimeDefault"
        app:layout_constraintTop_toBottomOf="@+id/readTimeDefault"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="10" />

    <!-- android:textSize="15sp"
        android:minWidth="48dp"
        android:fontWeight="50"
        android:maxLength="6"
        android:fontFamily="@font/quicksandlight"
        -->
    <EditText
        android:id="@+id/writeTimeDefault"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="10dp"


        android:hint="01:00"

        android:minHeight="48dp"
        android:textStyle="italic|bold"

        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readTimeDefault"
        tools:visibility="visible" />

    <!-- android:textSize="15sp" -->
    <TextView
        android:id="@+id/readTimeDefault"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:minHeight="24dp"

        android:text="Tempo meditazione 01:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_btn_settings"

        android:layout_width="60dp"
        android:layout_height="50dp"

        android:layout_marginTop="10dp"
        android:backgroundTint="@color/calmBlue"
        android:fontFamily="@font/quicksandbold"
        android:padding="10dp"
        android:paddingLeft="3dp"
        android:text="Salva"

        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writeTimeDefault" />

    <ImageButton
        android:id="@+id/imageButtonVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Versione App"
        android:minHeight="48dp"
        android:src="@drawable/ic_settings_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_btn_settings" />

    <TextView
        android:id="@+id/textViewLayoutMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Layout in ModalitÃ  NORMAL"
        style="@style/text_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonVersion" />

</androidx.constraintlayout.widget.ConstraintLayout>
