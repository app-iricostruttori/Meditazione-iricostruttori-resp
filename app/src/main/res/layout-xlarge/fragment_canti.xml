<HorizontalScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">




    <TableLayout
        android:stretchColumns="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/table_layout_canti"
        android:weightSum="5"
        tools:context=".ui.canti.CantiFragment" >

        <!-- android:paddingLeft="10dp"
        android:gravity="left|center_vertical" -->
        <TableRow android:id="@+id/rowSpinner"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingLeft="1dp" >


            <Spinner
                android:id="@+id/spinner_canti"
                style="@style/spinner_style"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:minHeight="48dp" />

            <!--
            <SeekBar
                android:id="@+id/SeekBarCanti"
                android:max="29"
                android:thumb="@drawable/ic_fas_volume_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="5dip" />
            -->
    </TableRow>

        <!--
        <com.iricostruttori.meditazione.ui.canti.CantiZoomView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            -->
        <TableRow android:id="@+id/rowText"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:padding="0dp">

            <!-- android:background="@color/lightBlue" -->
            <TextView
                android:id="@+id/textViewSans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"

                android:layout_weight="0"

                android:fontFamily="@font/quicksandbold"
                android:fontWeight="500"
                android:visibility="invisible"

                android:background="@drawable/rounded_corners_background"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:hint=""
                android:maxLength="1000"
                android:minHeight="48dp"
                android:textSize="10sp"

                android:textStyle="bold|italic"

                android:text="" />

            <!-- android:background="@color/lightBlue" -->
            <TextView
                android:id="@+id/textViewIta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:visibility="invisible"
                android:layout_weight="0"

                android:fontFamily="@font/quicksandbold"
                android:fontWeight="500"

                android:background="@drawable/rounded_corners_background"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:hint=""
                android:maxLength="1000"
                android:minHeight="48dp"
                android:textSize="10sp"
                android:textStyle="bold|italic"
                android:text="" />

        </TableRow>

        <!--
        </com.iricostruttori.meditazione.ui.canti.CantiZoomView>
        -->


        <TableRow android:id="@+id/rowButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="1dp">

            <!-- android:gravity="left|center_vertical" -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/listenAudioBtn"
                style="@style/Widget.App.Button"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/calmBlue"
                android:fontFamily="@font/quicksandbold"
                android:text="Ascolta"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <!-- android:gravity="left|center_vertical" -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/stopAudioBtn"
                style="@style/Widget.App.Button"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/calmBlue"
                android:fontFamily="@font/quicksandbold"
                android:text="Stop"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </TableRow>

        <TableRow android:id="@+id/rowSeekBar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="1dp">

            <!-- android:layout_marginTop="10dip"
                android:layout_marginLeft="5dip"
            -->
            <SeekBar
                android:id="@+id/SeekBarCanti"
                android:max="29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:thumb="@drawable/ic_fas_volume_up" />

            <SeekBar
                android:id="@+id/SeekBarCantiHide"
                android:max="29"
                android:visibility="invisible"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:thumb="@drawable/ic_fas_volume_up" />
        </TableRow>

    </TableLayout>

</HorizontalScrollView>